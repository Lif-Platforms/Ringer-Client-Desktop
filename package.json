{
  "name": "ringer",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "author": {
    "name": "Lif Platforms",
    "email": "lif.platforms@gmail.com"
  },
  "description": "Say hello with Ringer!",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "electron": "^27.0.4",
    "electron-notification": "^1.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "js-cookie": "^3.0.5",
    "net": "^1.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "react-scripts": "5.0.1",
    "wait-on": "^7.1.0",
    "web-vitals": "^2.1.4",
    "yarn": "^1.22.19"
  },
  "build": {
    "appId": "com.lifplatforms.ringer",
    "productName": "Ringer",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!node_modules/*/{npm,npm.cmd,yarn,yarn.cmd}"
    ],
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "extraFiles": [
      {
        "from": "./main.js",
        "to": "./main.js"
      }
    ]
  },
  "scripts": {
    "build": "electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "ringer-start": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron . --node-version=20.9.0\"",
    "start": "react-scripts start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "electron-prebuilt-compile": "4.0.0"
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  }
}
