{
  "name": "ringer",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "electron-notification": "^1.0.0",
    "net": "^1.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "wait-on": "^7.0.1",
    "web-vitals": "^2.1.4"
  },
  "build": {
    "appId": "com.lifplatforms.ringer",
    "files": [
      "main.js"
    ],
    "asar": true
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "ringer-start": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.1"
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  }
}
